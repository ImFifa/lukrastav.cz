{block content}
    <header>
        <h2 n:block="title">{$news->title}</h2>

        <i class="date">{$news->created|date:'d. m. Y'}</i>
    </header>
    <article>
        <div class="message">
            <p>{$news->content|noescape}</p>
            <a n:href="Homepage:" class="btn btn-primary">Zpět na úvodní stránku</a>
        </div>
    </article>
{/block content}